#include <iostream>
using namespace std;

#define ROWS 3
#define COLS 3

int main() {
    int rowTotal = 0;
  int arr[ROWS][COLS] = {{2, 5, 7}, {8, 45, 9}, {4, 8, 8}};
  for (int i = 0; i < ROWS; i++) {
      cout << "\n";
    for (int j = 0; j < COLS; j++) {
        rowTotal += arr[i][j];
    }
    cout << rowTotal;
    rowTotal = 0;
   }
 
  cout << "\n";

  int sum = 0;
    for (int j = 0; j < COLS; j++) {
        for (int i = j; i >= 0; i--) {
            sum = sum + arr[i][j];
        }
    }
    
    cout << "\n";
    cout << sum << endl;
  return 0;
}
